<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:cont="clr-namespace:ContentViewPrismReactiveProperty.Views"
             x:Class="ContentViewPrismReactiveProperty.Views.MainPage"
             Title="実験">

    <StackLayout>
        <Label Text="ここから下がカスタムコントロール" />
        <cont:MyViewPage TextValue="{Binding Text.Value}"/>
        <Label Text="ここから下が親ページ" />
        <Label Text="{Binding Text.Value}"/>
        <Button Text="親ボタン カスコンの文字列が変わったら成功" Command="{Binding Button}"/>
    </StackLayout>

</ContentPage>